{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "pre-commit": "npm run lint:ci && npm run prisma:format",
    "resource:new": "ts-node misc/new_resource",
    "build": "tsc",
    "start": "npm run db:deploy && node dist/src",
    "test": "MODE=test && exit 0",
    "integration": "MODE=test && npm run db:deploy && jest --passWithNoTests --coverage --runInBand --forceExit --silent",
    "integration:watch": "MODE=test && npm run db:deploy && jest --passWithNoTests --coverage --runInBand --forceExit --watch --silent",
    "dev:db": "docker run --name db -e POSTGRES_PASSWORD=${DB_PASS} -e POSTGRES_USER=${DB_USER} -p ${DB_PORT}:${DB_PORT} -d postgres:alpine",
    "dev:redis": "docker run --name redis -e REDIS_PASSWORD=${REDIS_PASS} -p ${REDIS_PORT}:${REDIS_PORT} -d bitnami/redis:latest",
    "dev": "npm run db:deploy && concurrently --kill-others 'prisma generate --watch' 'ts-node-dev --respawn --cls --exit-child src'",
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "db:migrate:help": "prisma migrate --help",
    "db:migrate": "prisma migrate dev",
    "db:migrate:draft": "prisma migrate dev --create-only",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "db:deploy:status": "prisma migrate status",
    "db:push": "prisma db push --preview-feature",
    "db:studio": "prisma studio --port ${STUDIO_PORT}",
    "lint": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:ci": "eslint './src/**/*.{ts,tsx}'",
    "postinstall": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.19.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.13.1",
    "connect-redis": "^5.1.0",
    "env-var": "^7.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-session": "^1.17.1",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.4",
    "morgan": "^1.10.0",
    "prisma": "^2.19.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.2.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/clui": "^0.3.0",
    "@types/connect-redis": "0.0.16",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/http-errors": "^1.8.0",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.35",
    "@types/npm": "^2.0.31",
    "@types/pluralize": "^0.0.29",
    "@types/redis": "^2.8.28",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chalk": "^4.1.0",
    "clui": "^0.3.6",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.1.3",
    "inquirer": "^8.0.0",
    "jest": "^26.6.3",
    "npm": "^7.6.3",
    "pluralize": "^8.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  }
}
