{
  "name": "api-template",
  "version": "1.0.0",
  "description": "Modern production-ready typescript backend template",
  "author": {
    "name": "LeChatErrant",
    "email": "guillaume.hector@epitech.eu",
    "url": "https://github.com/LeChatErrant/"
  },
  "license": "ISC",
  "scripts": {
    "lantern": "lantern",
    "build": "tsc",
    "start": "npm run db:deploy && node dist",
    "test": "exit 0",
    "integration": "npm run db:deploy && jest --passWithNoTests --coverage --runInBand --silent --detectOpenHandles",
    "integration:watch": "MODE=test && npm run db:deploy && jest --passWithNoTests --coverage --runInBand --watch --silent --detectOpenHandles",
    "dev": "npm run db:push && concurrently --raw --kill-others 'prisma generate --watch' 'ts-node-dev --respawn --cls --exit-child src'",
    "dev:services": "npm run dev:db && npm run dev:redis",
    "dev:services:stop": "docker rm api-template-db api-template-redis -f && docker volume rm api-template-db api-template-redis -f",
    "dev:db": "docker run --name api-template-db -e POSTGRES_PASSWORD=${DB_PASS} -e POSTGRES_USER=${DB_USER} -p ${DB_PORT}:${DB_PORT} -d postgres:alpine",
    "dev:redis": "docker run --name api-template-redis -e REDIS_PASSWORD=${REDIS_PASS} -p ${REDIS_PORT}:${REDIS_PORT} -d bitnami/redis:latest",
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "db:studio": "prisma studio --port ${STUDIO_PORT}",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "lint": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:ci": "eslint './src/**/*.{ts,tsx}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(ts|js)": [
      "eslint --fix"
    ],
    "prisma/schema.prisma": [
      "prisma format --schema"
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "axios": "^0.27.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "colors": "^1.4.0",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "env-var": "^7.5.0",
    "express": "^4.21.0",
    "express-async-router": "^0.1.15",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.1",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "prisma": "^4.8.1",
    "reflect-metadata": "^0.2.2",
    "typescript": "^4.9.5",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@lechaterrant/lantern": "^1.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-redis": "0.0.20",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^27.5.0",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "comment-json": "^4.2.5",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.0",
    "eslint-config-airbnb-typescript": "^14.0.2",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.2",
    "jest": "^27.5.1",
    "lint-staged": "^15.2.10",
    "supertest": "^7.0.0",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^2.0.0"
  }
}
