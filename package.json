{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:ci && npm run db:format"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "MODE=test && exit 0",
    "integration": "MODE=test && npm run db:up && jest --passWithNoTests --coverage --runInBand --forceExit",
    "integration:watch": "MODE=test && npm run db:up && jest --passWithNoTests --coverage --runInBand --forceExit --watch",
    "start": "npm run db:up && node dist",
    "dev:db": "docker run --name db -e POSTGRES_PASSWORD=${DB_PASS} -e POSTGRES_USER=${DB_USER} -p ${DB_PORT}:${DB_PORT} -d postgres:alpine",
    "dev:redis": "docker run --name redis -e REDIS_PASSWORD=${REDIS_PASS} -p ${REDIS_PORT}:${REDIS_PORT} -d bitnami/redis:latest",
    "dev": "npm run db:up && concurrently --kill-others 'prisma generate --watch' 'ts-node-dev --respawn --cls --exit-child src'",
    "generate": "prisma generate",
    "db": "npm run db:migrate && npm run db:up",
    "db:migrate": "prisma migrate save --create-db --experimental",
    "db:up": "prisma migrate up --create-db --experimental",
    "db:format": "prisma format",
    "db:studio": "prisma studio --port ${STUDIO_PORT}",
    "lint": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:ci": "eslint './src/**/*.{ts,tsx}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/connect-redis": "0.0.16",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/redis": "^2.8.28",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1"
  },
  "dependencies": {
    "@prisma/cli": "^2.12.1",
    "@prisma/client": "^2.15.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "connect-redis": "^5.0.0",
    "env-var": "^7.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-session": "^1.17.1",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.4",
    "morgan": "^1.10.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.1.3",
    "winston": "^3.3.3"
  }
}
