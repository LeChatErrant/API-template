{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "pre-commit": "npm run lint:ci && npm run prisma:format",
    "cli": "templated-project-cli",
    "build": "tsc",
    "start": "npm run db:deploy && node dist",
    "test": "MODE=test && exit 0",
    "integration": "MODE=test && npm run db:deploy && jest --passWithNoTests --coverage --runInBand --silent --detectOpenHandles",
    "integration:watch": "MODE=test && npm run db:deploy && jest --passWithNoTests --coverage --runInBand --watch --silent --detectOpenHandles",
    "dev:db": "docker run --name db -e POSTGRES_PASSWORD=${DB_PASS} -e POSTGRES_USER=${DB_USER} -p ${DB_PORT}:${DB_PORT} -d postgres:alpine",
    "dev:redis": "docker run --name redis -e REDIS_PASSWORD=${REDIS_PASS} -p ${REDIS_PORT}:${REDIS_PORT} -d bitnami/redis:latest",
    "dev": "npm run db:deploy && concurrently --kill-others 'prisma generate --watch' 'ts-node-dev --respawn --cls --exit-child src'",
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "db:migrate:help": "prisma migrate --help",
    "db:migrate": "prisma migrate dev",
    "db:migrate:draft": "prisma migrate dev --create-only",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "db:deploy:status": "prisma migrate status",
    "db:push": "prisma db push --preview-feature",
    "db:studio": "prisma studio --port ${STUDIO_PORT}",
    "lint": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:ci": "eslint './src/**/*.{ts,tsx}'"
  },
  "keywords": [],
  "author": {
    "name": "LeChatErrant",
    "email": "guillaume.hector@epitech.eu",
    "url": "https://github.com/LeChatErrant/"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.25.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "connect-redis": "^6.0.0",
    "env-var": "^7.0.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-session": "^1.17.2",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.4",
    "morgan": "^1.10.0",
    "prisma": "^2.26.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.3.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "0.0.16",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.6.1",
    "@types/redis": "^2.8.30",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "templated-project-cli": "^3.0.0",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6"
  }
}
